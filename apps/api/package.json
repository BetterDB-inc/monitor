{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "nest build",
    "start": "node dist/main",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "clean": "rm -rf dist",
    "ai:index-docs": "ts-node -r tsconfig-paths/register scripts/index-valkey-docs.ts",
    "docs:download": "EMBED=false ts-node -r tsconfig-paths/register scripts/index-docs.ts",
    "docs:index": "ts-node -r tsconfig-paths/register scripts/index-docs.ts",
    "docs:index:valkey": "SOURCE=valkey ts-node -r tsconfig-paths/register scripts/index-docs.ts",
    "docs:index:redis": "SOURCE=redis ts-node -r tsconfig-paths/register scripts/index-docs.ts",
    "docs:clean": "rm -rf data/docs data/chunks data/vector-store"
  },
  "dependencies": {
    "@betterdb/shared": "workspace:*",
    "@fastify/static": "^7.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@lancedb/lancedb": "^0.23.0",
    "@langchain/community": "^1.1.3",
    "@langchain/core": "^1.1.12",
    "@langchain/ollama": "^1.1.0",
    "@langchain/textsplitters": "^1.0.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/swagger": "^11.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "apache-arrow": "^21.1.0",
    "better-sqlite3": "^12.5.0",
    "hnswlib-node": "^3.0.0",
    "iovalkey": "^0.3.3",
    "langchain": "^1.2.7",
    "ollama": "^0.6.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.3",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
