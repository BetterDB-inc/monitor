{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@betterdb/shared": [
        "../shared/src/index.ts"
      ],
      "@betterdb/shared/encryption": [
        "../shared/src/encryption.ts"
      ],
      "@betterdb/shared/license": [
        "../shared/src/license/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "assets",
    "scripts"
  ]
}